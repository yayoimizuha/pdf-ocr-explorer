<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDF_OCR_Explorer.MainPage" SizeChanged="Window_SizeChanged">

    <HorizontalStackLayout>
        <VerticalStackLayout VerticalOptions="FillAndExpand">
            <Button x:Name="FilePickerButton" Clicked="FilePickerButton_OnClicked" HeightRequest="50" Text="ファイル選択"></Button>
            <ScrollView x:Name="ThumbnailView" Loaded="ThumbnailView_Loaded" VerticalOptions="FillAndExpand">
                <VerticalStackLayout x:Name="ThumbnailStack" VerticalOptions="FillAndExpand"></VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>

        <BoxView WidthRequest="2" Color="White">

        </BoxView>

        <ScrollView>
            <Label x:Name="Label"></Label>
        </ScrollView>
    </HorizontalStackLayout>
</ContentPage>